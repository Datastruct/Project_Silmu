<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BusResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#F2F5F5"
        android:id="@+id/linearLayout"
        android:weightSum="1">

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_width="10.67dp"
        android:layout_height="32dp"
        android:src="@drawable/glasses"
        android:layout_weight="0.5"
        android:layout_gravity="center_vertical"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/txt_main" />

    <EditText
        android:layout_weight="0.07"
        android:textSize="30dp"
        android:hint="버스 번호를 입력하세요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <requestFocus />
    </EditText>
    </LinearLayout>

    <Button
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:text="해당 경로 검색"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="down"
        android:background="@drawable/arrivalbtn"
        android:id="@+id/button3"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:textSize="30dp"
        android:text="최근 경로 검색"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ex_one"
        android:id="@+id/button4"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"/>
    <Button
        android:text="즐겨 찾기"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ex_two"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>
    <Button
        android:textSize="30dp"
        android:text="알림 설정"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ex_three"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:textSize="30dp"
        android:text="내 주변 정류소"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ex_four"
        android:id="@+id/button7"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>


